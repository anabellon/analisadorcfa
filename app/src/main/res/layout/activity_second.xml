<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appbackground"
    android:backgroundTint="#36156565"
    android:backgroundTintMode="src_over">

    <Button
        android:id="@+id/btIdentificar"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="#25AA32"
        android:backgroundTintMode="add"
        android:fontFamily="@font/nunito_semibold"
        android:shadowColor="#000000"
        android:shadowRadius="3"
        android:text="Identificar Adulteração"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btCarregar"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btCarregar"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="#03A9F4"
        android:backgroundTintMode="add"
        android:fontFamily="@font/nunito_semibold"
        android:shadowColor="#000000"
        android:shadowRadius="3"
        android:text="Carregar imagem"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carregarImageView"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/carregarImageView"
        android:layout_width="148dp"
        android:layout_height="177dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/iconimage2"
        tools:ignore="ContentDescription" />
</androidx.constraintlayout.widget.ConstraintLayout>